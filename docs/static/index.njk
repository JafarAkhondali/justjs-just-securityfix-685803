{% set coreMinJsScript %}
<script
  src="https://cdn.jsdelivr.net/npm/@just-js/just@{{ version }}/dist/browser/core.min.js"
  crossorigin="anonymous"
  defer></script>
{% endset %}
{% set justMinJsScript %}
<script
  src="https://cdn.jsdelivr.net/npm/@just-js/just@{{ version }}/dist/browser/just.min.js"
  crossorigin="anonymous"
  defer></script>
{% endset %}
{% set nodeJsCommand %}
npm i @just-js/just
{% endset %}

<!DOCTYPE html>
<html lang='en'>
<head>
	<meta charset='utf-8'/>
	<title>JustJs - The core for all your js projects.</title>
	<link rel='preload' href='/font/spacemono/SpaceMono-Regular.ttf' as='font' />
