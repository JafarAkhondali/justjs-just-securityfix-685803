{% extends './.layout.njk' %}
{% block head %}
	{{ super() }}
	<style>{% include './css/.index.css' %}</style>
{% endblock %}
{% block main %}
	<div id='home'>
		<div id='banner'>
			<a id='github-link' href='https://github.com/justjs' rel='noopener noreferrer' title='JustJs on Github'>
				<svg xmlns='http://w3.org/2000/svg' width='24' height='24'>
					<use xlink:href='#github-logo' href='#github-logo'/>
				</svg>
			</a>
			<div class='content-wrapper'>
				<img title='JustJs' src='/img/logo-black-128x128.png?v=1.2.0' alt='JustJs' srcset='/img/logo-black-256x256.png?v=1.2.0 2x'/>
			</div>
			{# FIXME: Link to the merged version of browser and server docs once generated. #}
			<a id='floating-button' href='v{{ version }}/browser/just/' role='button'>Read the docs &rarr;</a>
		</div
		><section id='setup'>
			<header>
				<h2>Setup</h2>
			</header>
			<div class='content-wrapper'>
				<figure id='browser-setup'>
					<figcaption><a href='https://github.com/justjs/just/blob/master/src/browser/' rel='noopener noreferrer'>Browser</a></figcaption>
					<dl>
						<dt><a href='https://github.com/justjs/just/blob/master/src/browser/core.js' rel='noopener noreferrer'>Core</a> &rarr; <a href='{{ getCDNUrl("dist/browser/core.min.js", version) }}' rel='noopener noreferrer'>core.min.js</a> &rarr; <a href='v{{ version }}/browser/core/'>docs</a></dt>
						<dd>
							<div class='code-wrapper'>
								<pre class='prettyprint'><code>{{ buildScriptTag('dist/browser/core.min.js', version) }}</code></pre>
							</div>
						</dd>
						<dt><a href='https://github.com/justjs/just/blob/master/src/browser/just.js' rel='noopener noreferrer'>Full suite</a> &rarr; <a href='{{ getCDNUrl("dist/browser/just.min.js", version) }}'>just.min.js</a> &rarr; <a href='v{{ version }}/browser/just/'>docs</a></dt>
						<dd>
							<div class='code-wrapper'>
								<pre class='prettyprint'><code>{{ buildScriptTag('dist/browser/just.min.js', version) }}</code></pre>
							</div>
						</dd>
					</dl>
				</figure>
				<br>
				<figure id='nodejs-setup'>
					<figcaption><a href='https://github.com/justjs/just/blob/master/src/server/' rel='noopener noreferrer'>Node js</a> &rarr; <a href='v{{ version }}/server/'>docs</a></figcaption>
					<div class='code-wrapper'>
						<pre class='prettyprint'><code>npm i @just-js/just</code></pre>
					</div>
				</figure>
			</div>
		</section
		><section id='usage'>
			<header>
				<h2>Usage</h2>
			</header>
			<div class='content-wrapper'>
				<div class='code-wrapper'>
					<pre class='prettyprint'><code>var just = window.just;</code><br/><code>// or: var just = require('@just-js/just');</code></pre>
				</div>
			</div>
		</section>
	</div>
{% endblock %}
