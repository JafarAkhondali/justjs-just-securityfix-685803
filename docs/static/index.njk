	<style>{% include './css/.index.css' %}</style>
</head>
<body>
	<main role='main'>
		<div id='home'>
			<div id='banner'>
				<a id='github-link' href='https://github.com/justjs' rel='noopener noreferrer'>
					<svg xmlns='http://w3.org/2000/svg' width='24' height='24'>
						<use xlink:href='#github-logo' href='#github-logo'/>
					</svg>
				</a>
				<h1 id='logo'><span data-text='just'>Just</span><span data-text='js'>Js</span></h1>
			</div>
			<section id='setup'>
				<header>
					<h2>Setup</h2>
				</header>
				<figure id='browser-setup'>
					<figcaption><a href='https://github.com/justjs/just/blob/master/src/browser/' rel='noopener noreferrer'>Browser</a></figcaption>
					<dl>
						<dt><a href='https://github.com/justjs/just/blob/master/src/browser/core.js' rel='noopener noreferrer'>Core</a> &rarr; <a href='https://cdn.jsdelivr.net/npm/@just-js/just@{{ version }}/dist/browser/core.min.js' rel='noopener noreferrer'>core.min.js</a></dt>
						<dd>
							<div class='code-wrapper'>
								<pre class='prettyprint'><code>{{ coreMinJsScript | trim }}</code></pre>
							</div>
						</dd>
						<dt><a href='https://github.com/justjs/just/blob/master/src/browser/just.js' rel='noopener noreferrer'>Full suite</a> &rarr; <a href='https://cdn.jsdelivr.net/npm/@just-js/just@{{ version }}/dist/browser/just.min.js'>just.min.js</a></dt>
						<dd>
							<div class='code-wrapper'>
								<pre class='prettyprint'><code>{{ justMinJsScript | trim }}</code></pre>
							</div>
						</dd>
					</dl>
				</figure>
				<br>
				<figure id='nodejs-setup'>
					<figcaption><a href='https://github.com/justjs/just/blob/master/src/server/' rel='noopener noreferrer'>Node js</a></figcaption>
					<div class='code-wrapper'>
						<pre class='prettyprint'><code>{{ nodeJsCommand | trim }}</code></pre>
					</div>
				</figure>
			</section>
			<section id='usage'>
				<header>
					<h2>Usage</h2>
				</header>
				<div class='code-wrapper'>
					<pre class='prettyprint'><code>var just = window.just;</code><br/><code>// or: var just = require('@just-js/just');</code></pre>
				</div>
			</section>
		</div>
	</main>
	<footer id='contentinfo' role='contentinfo'>
		<ul class='horizontal-list'>
			<li><a href='https://github.com/justjs/just' rel='noopener noreferrer'>Contribute</a></li>
